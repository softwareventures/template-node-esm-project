{
  "name": "@softwareventures/template-node-esm-project",
  "version": "0.0.0-development",
  "description": "Template for TypeScript node ESM projects",
  "keywords": [
    "ESM",
    "TypeScript",
    "node",
    "template"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/template-node-project",
  "bugs": "https://github.com/softwareventures/template-node-project/issues",
  "repository": "github:softwareventures/template-node-project",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "pre-commit": "precise-commits",
    "fix": "tsc --noEmit && eslint . --fix && prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepare": "husky install && tsc",
    "test": "ava"
  },
  "engines": {
    "node": "^12 || ^14 || ^16 || >=17"
  },
  "dependencies": {
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@commitlint/cz-commitlint": "16.2.3",
    "@softwareventures/eslint-config": "5.1.5",
    "@softwareventures/precise-commits": "2.0.18",
    "@softwareventures/prettier-config": "3.0.0",
    "@softwareventures/semantic-release-config": "2.0.2",
    "@softwareventures/tsconfig": "6.0.0",
    "ava": "4.2.0",
    "commitizen": "4.2.4",
    "eslint": "8.13.0",
    "husky": "7.0.4",
    "prettier": "2.6.2",
    "semantic-release": "17.4.7",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "publishConfig": {
    "access": "public"
  }
}
